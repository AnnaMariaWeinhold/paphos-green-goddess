---
const { img } = Astro.props;
---

<div class="image__container">
{ img &&
    (
        <img src={ img.src } alt={ img.alt } class="image">
    )
}
</div>
<style>
    .image__container {
        margin: 3em auto;
        display: flex;
        justify-content: center;
        max-width: 730px;
    }
    .image {
        border-radius: var(--border-radius-img);  
        width: 100%;
    }    

    @media only screen and (min-width: 60em) {
    .image__container {
        margin-bottom: 5em;
    }
    }
</style>