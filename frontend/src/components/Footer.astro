<style>

    /* FORM */ 
    .footer__form-heading {
        color: #fff;
    }

      .footer__form-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.2em;
        background-color: var(--second-color);
        border-radius: 1em;
        margin: 2em auto;
    }

    .form__input {
        padding: 1em;
        border-radius: 1em;
        border: none;
        font-family: var(--ff-text);
        font-size: 1rem;
        color: var(--text-color);
        font-weight: 300;
    }

    input:focus,
    textarea:focus {
        outline: none;
        background-color: #e5fff2;
    }

    .form__label {
        color: #fff;
        font-family: var(--ff-heading);
        font-size: 1.2rem;
        margin-top: 8px;
        margin-bottom: -4px;
    }

    .form__checkbox {
        display: flex;
        gap: 1em;
        align-items: center;
    
    }

    .form__button {
        background-color: var(--main-color);
        padding: 16px 18px;
        color: #fff;
        border-radius: var(--border-radius);
        text-decoration: none;
        font-size: var(--fs-300);
        font-weight: 400;
        transition: 0.7s;
        border: none;
        width: 50%;
        margin: 1.2em auto;
        cursor: pointer;
    }

    .form__button:hover {
        box-shadow: inset 0 -4.25em 0 0 var(--hover-color);
    }

    /* LINK */
    .footer__creator-link {
        color: #fff;
        border-bottom: 2px solid var(--second-color);
        border-radius: 2px;
        padding-bottom: 2px; 
    }

    .footer__link {
        color: #fff;
        display: flex;
        align-self: center;
        text-align: center;
        border-bottom: 2px solid var(--second-color);
        border-radius: 2px;
        padding-bottom: 2px; 
        font-size: var(--fs-xs);
        font-family: var(--ff-text);
    }

    .footer__link:hover,
    .footer__creator-link:hover {
        border-bottom: 2px solid #fff;
        border-radius: 2px;
        padding-bottom: 2px;  
    }

    .footer__link-container {
        display: flex;
        gap: 2em;
        justify-content: center;
    }

    .footer__container {
        background-color: var(--second-color);
        padding: 2em;
        display: grid;
        gap: 2em;
    }

    .footer__logo {
        width: 50%;
        display: flex;
        justify-self: center;
    }

    .footer__slogan {
        color: #fff;
        text-align: center;
        margin-top: -24px;
    }

    .footer__share {
        display: flex;
        justify-content: center;
    }

    .share-btn {
        color: #fff;
        padding: 12px;
    }

    .share-btn:hover {
        color: var(--hover-color);
    }

    .footer__creator-container {
        text-align: center;
        margin: 0 auto;
        color: #fff;
    }

    .footer__creator {
        font-size: var(--fs-xxs);
    }


    @media only screen and (min-width: 40em) {
        .footer__logo {
        width: 30%;
        }
    }

    @media only screen and (min-width: 60em) {
        .footer__logo {
        width: 14%;
        }
    }
</style>