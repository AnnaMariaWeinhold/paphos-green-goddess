export async function getStaticPaths() {
  const workshops = await sanityClient.fetch(`*[_type == "workshop"]`);
  return workshops
    .map((workshop) => {
      return workshop.slug?.current
        ? {
            params: {
              slug: workshop.slug?.current
            },
            props: { ...workshop }
          }
        : null;
    })
    .filter(Boolean);
}

