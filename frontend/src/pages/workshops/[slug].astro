---
//import components and layouts
import MainLayout from '../../layouts/MainLayout.astro';
import HeroShot from '../../components/HeroShot.astro';
import Spacer from '../../components/Spacer.astro';
import Button from '../../components/Button.astro';

//import sanity
import { useSanityClient } from 'astro-sanity';
import { urlForImage } from '../../lib/urlForImage';
import PortableText from '../../components/PortableText.astro';
import Section from '../../components/Section.astro';





export async function getStaticPaths() {
  const workshops = await useSanityClient().fetch(`*[_type == "workshop"]`);

  console.log(workshops);
  return workshops
    .map((workshop) => {
      return workshop.slug?.current
        ? {
            params: {
              slug: workshop.slug?.current
            },
            props: { ...workshop }
          }
        : null;
    })
    .filter(Boolean);
}

const { title, mainImage, description, startTime, endTime, whatDo, whatGet, takeHomeMessage, forWhom, whatBring } = Astro.props;
